# nice_oled 활성화(일반 OLED)
CONFIG_NICE_OLED_ON=y

# 레이어 위젯
CONFIG_NICE_OLED_WIDGET_LAYER=y

# WPM 위젯에서 봉고캣 켜기
CONFIG_NICE_OLED_WIDGET_WPM=y
CONFIG_NICE_OLED_WIDGET_WPM_BONGO_CAT=y      # 봉고캣 :contentReference[oaicite:9]{index=9}
CONFIG_NICE_OLED_WIDGET_WPM_LUNA=n           # (원하면) 루나 끄기 :contentReference[oaicite:10]{index=10}
# 숫자/WPM 게이지가 거슬리면 일단 꺼보고 모양 확인
CONFIG_NICE_OLED_WIDGET_WPM_NUMBER=n         # :contentReference[oaicite:11]{index=11}
CONFIG_NICE_OLED_WIDGET_WPM_SPEEDOMETER=n    # :contentReference[oaicite:12]{index=12}

# "테스트 위젯" (원하면)
CONFIG_NICE_OLED_WIDGET_CENTRAL=y            # 중앙 테스트 위젯 :contentReference[oaicite:13]{index=13}

# 좌표는 일단 디폴트(나중에 조정)
# 봉고캣 기본 좌표 예시(README에 X/Y 옵션 있음)
# CONFIG_NICE_OLED_WIDGET_BONGO_CAT_CUSTOM_X= 64
# CONFIG_NICE_OLED_WIDGET_BONGO_CAT_CUSTOM_Y= -9
